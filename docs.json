{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "UserIn Docs",
  "colors": {
    "primary": "#6366F1",
    "light": "#818CF8",
    "dark": "#4F46E5"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Guias",
        "groups": [
          {
            "group": "Início",
            "pages": [
              "index",
              "visao-geral"
            ]
          },
          {
            "group": "Onboarding",
            "pages": [
              "onboarding/primeiros-passos",
              "onboarding/instalar-tracker",
              "onboarding/conectando-dados",
              "onboarding/verificar-integracao"
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "Tracker JavaScript API",
            "pages": [
              "api-reference/introduction"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Plataforma",
          "href": "https://app.userin.ai",
          "icon": "browser"
        },
        {
          "anchor": "Changelog",
          "href": "https://userin.ai/changelog",
          "icon": "clock-rotate-left"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Suporte",
        "href": "mailto:suporte@userin.ai"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Acessar Plataforma",
      "href": "https://app.userin.ai"
    }
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "cursor"
    ]
  },
  "footer": {
    "socials": {
      "website": "https://userin.ai",
      "linkedin": "https://linkedin.com/company/userin-ai",
      "github": "https://github.com/sendspeed0"
    }
  },
  "search": {
    "prompt": "Pesquisar na documentação..."
  },
  "feedback": {
    "thumbsRating": true,
    "suggestEdit": true,
    "raiseIssue": true
  },
  "seo": {
    "indexHiddenPages": false
  }
}
